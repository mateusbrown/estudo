@page
@model ContosoUniversity.Pages.Instructors.GradeModel

@{
    ViewData["Title"] = "Edit Grade";
}

<h1>Edit Grade</h1>

<h4>Instructor @Model.Instructor.FullName</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Enrollment.Course.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Enrollment.Course.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Enrollment.Student.FullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Enrollment.Student.FullName)
                    </dd>
                </dl>   
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Grade" class="control-label"></label>
                <select asp-for="Enrollment.Grade" class ="form-control" asp-items="ViewBag.Grades"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Enrollment.EnrollmentID" />
                <input type="hidden" asp-for="Instructor.ID" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.Instructor.ID" asp-route-courseID="@Model.Enrollment.CourseID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}